mixin pasos_servicio(title1, subtitle1, title2, subtitle2, title3, subtitle3, title4, subtitle4)
  article.pasos_servicio
    .opacity.item_servicio
      .pasos_servicio-estructura
        span.pasos_servicio-estructura-img
        h3.pasos_servicio-estructura-title.color= title1
        span.pasos_servicio-estructura-subtitle.color2= subtitle1
    .opacity.item_servicio.none_servicio
      .pasos_servicio-img1
    .opacity.item_servicio
      .pasos_servicio-flujo
        span.pasos_servicio-flujo-img
        h3.pasos_servicio-flujo-title.color= title2
        span.pasos_servicio-flujo-subtitle.color2= subtitle2
    .opacity.item_servicio
      .pasos_servicio-maquetacion
        span.pasos_servicio-maquetacion-img
        h3.pasos_servicio-maquetacion-title.color= title3
        span.pasos_servicio-maquetacion-subtitle.color2= subtitle3
    .opacity.item_servicio
      .pasos_servicio-produccion
        span.pasos_servicio-produccion-img
        h3.pasos_servicio-produccion-title.color= title4
        span.pasos_servicio-produccion-subtitle.color2= subtitle4
