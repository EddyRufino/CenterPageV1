mixin pasos(title1, subtitle1, title2, subtitle2, title3, subtitle3, title4, subtitle4)
  article.pasos
    .opacity.item
      .pasos-estructura
        span.pasos-estructura-img
        h3.pasos-estructura-title.color= title1
        span.pasos-estructura-subtitle.color2= subtitle1
    .opacity.item.none
      .pasos-img1
    .opacity.item
      .pasos-flujo
        span.pasos-flujo-img
        h3.pasos-flujo-title.color= title2
        span.pasos-flujo-subtitle.color2= subtitle2
    .opacity.item
      .pasos-maquetacion
        span.pasos-maquetacion-img
        h3.pasos-maquetacion-title.color= title3
        span.pasos-maquetacion-subtitle.color2= subtitle3
    .opacity.item
      .pasos-produccion
        span.pasos-produccion-img
        h3.pasos-produccion-title.color= title4
        span.pasos-produccion-subtitle.color2= subtitle4
